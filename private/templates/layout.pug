html
head
  meta(charset="utf-8")
  meta(name="viewport",content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
  meta(name="robots",content="index,follow")
  meta(name="web_author" content=site.author)
  meta(name="description",content=site.description)
  meta(name="keywords",content=site.keywords)

  meta(property="og:title",content=site.title)
  meta(property="og:description",content=site.description)
  meta(property="og:type",content="website")
  meta(property="og:image",content=urls[environment] + "/img/logo.png")
  meta(property="og:image:type",content=site.image.type)
  meta(property="og:image:width",content=site.image.width)
  meta(property="og:image:height",content=site.image.height)
  //- meta(property="og:url",content=urls[environment] + "/" + page.filename)
  meta(property="og:locale",content=site.lang)

  title= site.title

  //- link(rel="shortcut icon",type="image/x-icon",href=urls[environment] + "/images/favicon.ico")
  //- link(rel="icon",type="image/x-icon",href=urls[environment] + "/images/favicon.ico")

  link(rel="stylesheet", href="assets/css/vendors.css")
  link(rel="stylesheet", href="assets/css/main.css")
  block stylesheets

body
  include partials/svg-icons.pug
  include partials/header.pug

  main.main_content
    block content

  include partials/footer.pug

  script(src="assets/js/vendors.js")
  script(src="assets/js/main.js")
  block scripts
